<% include head %>
<% include menu %>

<h3><%= movie.title %></h3>
<h4>Made in: <%= movie.year %> </h4>
<h4>Tagline: <%= movie.tagline %> </h4>

<h4>Directed By:</h4>
<ul>
<% directors.forEach(function(dir) { %>
   <li>
	<a href = "/person/<%= dir.id %>" > <%= dir.name %> </a>
	<form method="post" action="/movie/<%= movie.id %>/director/remove/<%= dir.id %>">
	  <input type="submit" value="Remove">
	</form>
   
   </li>
<% }) %>
</ul>


<h4>Actors:</h4>
<ul>
<% actors.forEach(function(act) { %>
   <li>
	<a href = "/person/<%= act.id %>"><%= act.name %></a>
	<form method="post" action="/movie/<%= movie.id %>/actor/remove/<%= act.id %>">
	  <input type="submit" value="Remove">
	</form>
	</li>
<% }) %>
</ul>


<hr>
<h3>Update Movie</h3>
<form method="post" action="/movie/<%= movie.id %>/update">
  <label>Movie Title</label><br>
  <input required type="text" name="title" value = "<%= movie.title %>">
  
  <br>
  <label>Year</label><br>
  <input required type="text" name="year" value = "<%= movie.year %>">
  
  <br>
  <label>Tagline</label><br>
  <input required type="text" name="tagline" value = "<%= movie.tagline %>">
    
  <br><br>
  <input type="submit" value="submit">
</form>

<hr>
<h3>Delete Movie</h3>
<form method="post" action="/movie/<%= movie.id %>/delete">
  <input type="submit" value="Delete">
</form>