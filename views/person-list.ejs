<% include head %>
<% include menu %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
      <h3>Add Person</h3>
      <form method="post" action="/person/add">
        <label>Person Name</label><br>
        <input type="text" name="name">
        <br>
        <label>Age</label><br>
        <input required type="text" name="age">
        <br>
        <label>Born</label><br>
        <input required type="text" name="born">
        <br>
        <br>
        <input required type="submit" value="submit">
      </form>
      <hr>
      <h3>Persons</h3>
      <table class="table table-striped">
        <tr>
          <thead><th>Name</th><th>BirthYear</th></thead>
        </tr>
        <% persons.forEach(function(person){ %>
          <tr>
            <td><a href = "/person/<%= person.id %>"><%= person.name %></a></td>
            <td><%= person.year %></td>
          </tr>
        <% }) %>
        </table>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-3"></div>
  </div>
</div>